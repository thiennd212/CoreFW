@page "/"
@using Volo.Abp.MultiTenancy
@inherits CoreFWComponentBase
@inject AuthenticationStateProvider AuthenticationStateProvider
@using DevExpress.Blazor

<div class="dashboard-header">
    <h1>Dashboard > Overview</h1>
</div>

<div class="dashboard-stats">
    <div class="stats-grid">
        <div class="stat-card">
            <h3>USERS</h3>
            <div class="stat-value">1,234</div>
        </div>
        <div class="stat-card">
            <h3>REVENUE</h3>
            <div class="stat-value">$12,345</div>
        </div>
        <div class="stat-card">
            <h3>ACTIVITY</h3>
            <div class="stat-value">432 today</div>
        </div>
    </div>
</div>

<div class="dashboard-widgets">
    <div class="widget">
        <div class="widget-header">
            <h3>RECENT ACTIVITY</h3>
        </div>
        <div class="widget-body">
            <div class="activity-section">
                <h4>Today</h4>
                <ul class="activity-list">
                    <li>• User login at 14:30</li>
                    <li>• New order #1234 created</li>
                </ul>
            </div>
        </div>
    </div>
    
    <div class="widget">
        <div class="widget-header">
            <h3>USER STATISTICS</h3>
        </div>
        <div class="widget-body">
            [DevExpress Chart]
        </div>
    </div>
</div>

@code {
    List<DataPoint> chartData = new()
    {
        new DataPoint { Category = "Jan", Value = 10 },
        new DataPoint { Category = "Feb", Value = 20 },
        new DataPoint { Category = "Mar", Value = 15 },
        new DataPoint { Category = "Apr", Value = 25 },
        new DataPoint { Category = "May", Value = 30 }
    };

    public class DataPoint
    {
        public string Category { get; set; } = "";
        public double Value { get; set; }
    }
}

<style>
    .dashboard-header {
        margin-bottom: 1rem;
    }
    
    .stats-grid {
        display: grid;
        grid-template-columns: repeat(3, 1fr);
        gap: 1rem;
        margin-bottom: 1rem;
    }
    
    .stat-card {
        border: 1px dashed #ccc;
        padding: 1rem;
        text-align: center;
    }
    
    .stat-value {
        font-size: 1.5rem;
        font-weight: bold;
    }
    
    .dashboard-widgets {
        display: grid;
        grid-template-columns: 1fr;
        gap: 1rem;
    }
    
    .widget {
        border: 1px dashed #ccc;
        margin-bottom: 1rem;
    }
    
    .widget-header {
        padding: 0.5rem 1rem;
        border-bottom: 1px dashed #ccc;
    }
    
    .widget-body {
        padding: 1rem;
    }
    
    .activity-section h4 {
        margin-bottom: 0.5rem;
    }
    
    .activity-list {
        list-style-type: none;
        padding-left: 0.5rem;
    }
    
    .activity-list li {
        margin-bottom: 0.5rem;
    }
</style>
