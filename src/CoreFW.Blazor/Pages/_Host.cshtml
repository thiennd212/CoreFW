@page "/"
@namespace CoreFW.Blazor.Pages
@using System.Globalization
@using Volo.Abp.Localization
@using Microsoft.AspNetCore.Components.Web
@using CoreFW.Blazor.Theme
@{
    Layout = null;
    var rtl = CultureHelper.IsRtl ? "rtl" : string.Empty;
}

<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name" dir="@rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CoreFW.Blazor</title>
    <base href="~/" />    
    <abp-style-bundle name="@CoreFWThemeBundles.Styles.Global" />
    <component type="typeof(HeadOutlet)" render-mode="ServerPrerendered" />
</head>
<body class="app-container @rtl">

    <component type="typeof(App)" render-mode="Server" />

    <div id="blazor-error-ui">
        <environment include="Staging,Production">
            An error has occurred. This application may no longer respond until reloaded.
        </environment>
        <environment include="Development">
            An unhandled exception has occurred. See browser dev tools for details.
        </environment>
        <a href="" class="reload">Reload</a>
        <a class="dismiss">🗙</a>
    </div>
    <abp-script-bundle name="@CoreFWThemeBundles.Scripts.Global" />
</body>
</html>
